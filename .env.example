# Mission Control — Environment Variables
# Copy this to .env and fill in your values

# ─── Server ───────────────────────────────────────────────────────────────────
PORT=7000

# ─── Workspace Paths ──────────────────────────────────────────────────────────
# Directory where openclaw.json and workspace files live
WORKSPACE_DIR=/workspace
OPENCLAW_DIR=/workspace

# ─── OpenClaw Gateway ─────────────────────────────────────────────────────────
OPENCLAW_GATEWAY_URL=http://localhost:3000
OPENCLAW_GATEWAY_TOKEN=your_gateway_token_here

# ─── Dashboard Auth ───────────────────────────────────────────────────────────
# Used for password recovery - set a strong random value
# If not set, one is generated on startup and printed to console
DASHBOARD_TOKEN=

# Bearer token for protect the /api endpoints from external scripts
MC_API_TOKEN=

# ─── Webhooks ─────────────────────────────────────────────────────────────────
WEBHOOK_SECRET=

# ─── Database ─────────────────────────────────────────────────────────────────
DATABASE_PATH=/data/mission_control.db

# ─── Security ─────────────────────────────────────────────────────────────────
# Set to "true" ONLY if you need access over HTTP from non-local IPs (not recommended)
DASHBOARD_ALLOW_HTTP=false
